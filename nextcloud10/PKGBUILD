developer=http://owncloud.org/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=10.0.1
pkgrel=1
pkgdesc="A safe home for all your data"
arch=('any')
license=("AGPL")
source=("https://download.nextcloud.com/server/releases/nextcloud-${pkgver}.tar.bz2")
depends=(
    'php'
    'smtp-server')
options=('!strip')
sha512sums=('d86f2f924f4ced1a94cb42af39dbbc94e95893da23dbe67e41a92385d9202d36513f166bc295ff8c52c7c8fefab76332810c137bcefeb3f9fc1102a4063dc4d5')

xxprepare() {
    patch ${startdir}/src/nextcloud/lib/private/security/trusteddomainhelper.php ${startdir}/allow-wildcard-trusted.patch
}

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
    mkdir -p ${pkgdir}/srv/http/_appicons/$pkgname
    install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/$pkgname/

# Data
    mkdir -p ${pkgdir}/var/lib/nextcloud10
    
# Code
    mkdir -p ${pkgdir}/usr/share/${pkgname}/bin
#    install -m755 ${startdir}/bin/{create-ocdata,fix-permissions,fix-restore,generate-autoconfig,upgrade,web-install}.pl ${pkgdir}/usr/share/${pkgname}/bin/
    install -m755 ${startdir}/bin/{install,upgrade}.pl ${pkgdir}/usr/share/${pkgname}/bin/

#    mkdir -p ${pkgdir}/usr/share/${pkgname}/tmpl
#    install -m644 ${startdir}/tmpl/htaccess.tmpl ${pkgdir}/usr/share/${pkgname}/tmpl/
#    touch ${pkgdir}/usr/share/${pkgname}/tmpl/ocdata

    cp -dr --no-preserve=ownership ${startdir}/src/nextcloud ${pkgdir}/usr/share/${pkgname}/
}
