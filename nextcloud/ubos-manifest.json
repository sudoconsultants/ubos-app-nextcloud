{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/nextcloud",
            "depends" : [
                "php-apache",
                "php-apcu",
                "php-gd",
                "php-imagick",
                "php-systemd"
            ],
            "apache2modules" : [
                "env",
                "headers",
                "php7",
                "rewrite",
                "setenvif"
            ],
            "phpmodules" : [
                "apcu",
                "gd",
                "iconv",
                "imagick",
                "mysqli",
                "pdo_mysql",
                "systemd"
            ],
            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        ".htaccess",
                        ".user.ini",
                        "3rdparty",
                        "apps",
                        "core",
                        "lib",
                        "ocm-provider",
                        "ocs",
                        "ocs-provider",
                        "resources",
                        "settings",
                        "themes",
                        "AUTHORS",
                        "console.php",
                        "COPYING",
                        "cron.php",
                        "index.html",
                        "index.php",
                        "occ",
                        "public.php",
                        "remote.php",
                        "robots.txt",
                        "status.php",
                        "version.php"
                    ],
                    "source" : "nextcloud/$1",
                    "uname" : "root",
                    "gname" : "root",
                    "filepermissions" : "preserve",
                    "dirpermissions"  : "preserve"
                },
                {
                    "type"  : "directory",
                    "name"  : "data",
                    "dirpermissions"  : "0750",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"  : "directory",
                    "name"  : "${appconfig.datadir}"
                },
                {
                    "type"  : "directory",
                    "name"  : "${appconfig.datadir}/data",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "datadir",
                    "dirpermissions"  : "0750",
                    "filepermissions" : "0640",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"  : "directory",
                    "name"  : "config",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "configdir",
                    "dirpermissions"  : "0750",
                    "filepermissions" : "0640",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/fix-permissions.pl"
                },
                {
                    "type"         : "file",
                    "name"         : "/etc/systemd/system/nextcloud@${appconfig.appconfigid}.service",
                    "template"     : "tmpl/nextcloud@.service.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "systemd-timer",
                    "name"         : "nextcloud@${appconfig.appconfigid}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/install.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/fix-restore.pl"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "all privileges"
                }
            ]
        }
    }
}
