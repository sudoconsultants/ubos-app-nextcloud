{
    "type"  : "accessory",

    "accessoryinfo" : {
        "appid"         : "nextcloud",
        "accessoryid"   : "mail",
        "accessorytype" : "app"
    },

    "roles" : {
        "apache2" : {
            "appconfigitems" : [
                {
                    "type"   : "directorytree",
                    "name"   : "apps/mail",
                    "source" : "/usr/share/nextcloud/apps/mail",
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "/usr/share/nextcloud/bin/activate-app.pl"
                }
            ]
        }
    }
}

