developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=2.3.1
pkgrel=1
pkgdesc="The Nextcloud bookmarks app"
_app=nextcloud
_acc=bookmarks
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/nextcloud/${_acc}/releases/download/v${pkgver}/${_acc}-${pkgver}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud')
options=('!strip')
sha512sums=('adc13f4cfefadaeee57ad05a62ece9752b3d6843577a1740e8bd274257f8ef33e1c3ef5c200a26c45bf6eeecf868e8597a70982bd6d7341c707646ba79bd6bf8')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps
    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
}
