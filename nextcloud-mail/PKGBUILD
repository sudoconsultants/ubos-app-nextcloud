developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.7.9
pkgrel=1
pkgdesc="The Nextcloud mail app"
_app=nextcloud
_acc=mail
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/nextcloud/${_acc}/releases/download/v${pkgver}/${_acc}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}") 
depends=(
    'nextcloud')
options=('!strip')
sha512sums=('a5eb7dfd013079a1800390d557d67a84264c248fc37c878f02ce52dd4a5171d4dd13f2b2a83e66f2816331cd5e9688523a9e8c094921e4e757bdb9b3f6f210a7')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
#    mkdir -p ${pkgdir}/srv/http/_appicons/$pkgname
#    install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/$pkgname/

# Code
    mkdir -p ${pkgdir}/usr/share/${_app}/apps

    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/usr/share/${_app}/apps/
}
